{
  "name": "protols",
  "version": "1.0.0",
  "description": "protobuf language server",
  "main": "lib/index.js",
  "repository": "git@github.com:loyalpartner/protols.git",
  "author": "lee <loyalpartner@163.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "ts-node script prepare",
    "build": "ts-node script build",
    "debug": "ts-node script debug"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "jest": "^29.0.3",
    "coc.nvim": "^0.0.80",
    "node-addon-api": "^5.0.0",
    "node-gyp": "^9.1.0",
    "prettier": "^2.7.1",
    "rollup": "^2.79.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "vsce": "^2.11.0",
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageserver-textdocument": "^1.0.7",
    "vscode-uri": "^3.0.5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSpacing": false
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "protobuf configuration",
      "properties": {
        "protobuf.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable coc-protobuf extension"
        },
        "protobuf.execArgv": {
          "type": "array",
          "default": [],
          "description": "Extra arguments for node which start language server.",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
